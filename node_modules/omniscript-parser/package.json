{
  "name": "omniscript-parser",
  "version": "1.3.0",
  "description": "OmniScript Format (OSF) parser and serializer - A universal document DSL for LLMs, Agentic AI, and Git-native workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OmniScriptOSF/omniscript-core.git",
    "directory": "parser"
  },
  "bugs": {
    "url": "https://github.com/OmniScriptOSF/omniscript-core/issues"
  },
  "homepage": "https://omniscriptosf.github.io",
  "scripts": {
    "build": "bun run tsc -p tsconfig.json",
    "clean": "bun run rimraf dist",
    "dev": "bun run tsc -p tsconfig.json --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bun run tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "bun run build && bun test"
  },
  "devDependencies": {
    "@types/node": "24.8.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.20.0",
    "bun": ">=1.3.0"
  },
  "keywords": [
    "osf",
    "omniscript",
    "parser",
    "document",
    "dsl",
    "markdown",
    "slides",
    "spreadsheet",
    "llm",
    "ai",
    "git-native",
    "typescript"
  ],
  "author": {
    "name": "Alphin Tom",
    "email": "alpha912@github.com",
    "url": "https://github.com/alpha912"
  },
  "license": "MIT"
}
